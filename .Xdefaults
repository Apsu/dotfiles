*ttyModes: erase ^H

URxvt.font: xft:DejaVu Sans Mono-9
URxvt.scrollBar: false
URxvt.background: black
URxvt.foreground: white
URxvt.urgentOnBell: true
URxvt.cutchars: `"()'*<>[]{|}
URxvt.urlLauncher: conkeror
URxvt.matcher.button: 1
URxvt.perl-ext-common: default,matcher,keyboard-select,-searchable-scrollback
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.C-Return:  ! C-^ because urxvt won't emit C-<Return>
URxvt.iso14755: false

Xft.rgba: rgba
Xft.hinting: true
Xft.antialias: true

xterm*faceName: DejaVu Sans Mono
xterm*faceSize: 9
xterm*background: black
xterm*foreground: white

xterm*utf8: 1
xterm*bellIsUrgent: true
xterm*backarrowKey: false
xterm*metaSendsEscape: true

!font settings
xscreensaver.Dialog.bodyFont: -*-liberation sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont: -*-liberation sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont: -*-liberation sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont: -*-liberation sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont: -*-liberation sans-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont: -*-liberation sans-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.headingFont: -*-liberation sans-bold-r-*-*-12-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground: #ffffff
xscreensaver.Dialog.background: #111111
xscreensaver.Dialog.topShadowColor: #111111
xscreensaver.Dialog.bottomShadowColor: #111111
xscreensaver.Dialog.Button.foreground: #666666
xscreensaver.Dialog.Button.background: #ffffff
!username/password input box and date text colour
xscreensaver.Dialog.borderWidth: 0
xscreensaver.Dialog.shadowThickness: 2
xscreensaver.Dialog.text.foreground: #666666
xscreensaver.Dialog.text.background: #ffffff
xscreensaver.Dialog.internalBorderWidth: 24
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.width: 8
xscreensaver.passwd.thermometer.foreground: #ff0000
xscreensaver.passwd.thermometer.background: #000000
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat: %H:%M %a %b %d, %Y
